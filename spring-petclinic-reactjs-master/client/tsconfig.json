{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "target": "es6", // Ensure the target is ES6 or higher to match modern JS features
    "strict": true, // Enable all strict type-checking options
    "esModuleInterop": true, // Enables compatibility with CommonJS and ES Modules
    "skipLibCheck": true, // Skip type checking of declaration files to avoid issues with third-party types
    "forceConsistentCasingInFileNames": true, // Ensures consistent casing in file names
    "noImplicitAny": false, // Allow variables with implicit `any` type
    "preserveConstEnums": true, // Preserve `const` enums in the output
    "removeComments": true, // Remove comments from output
    "allowJs": true, // Allow JavaScript files to be compiled
    "outDir": "public/dist", // Output directory for compiled files
    "sourceMap": true // Generate source maps for debugging
  },
  "include": [
    "src/**/*" // Include source files
  ],
  "exclude": [
    "node_modules", // Exclude node_modules to avoid type checking third-party code
    "tests", // Exclude test files if not part of the build
    "**/*.test.ts", // Exclude test files specifically, if you use `.test.ts` extensions
    "**/*.spec.ts" // Exclude spec files if you use `.spec.ts` extensions
  ]
}
